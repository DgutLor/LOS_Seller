<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_regist_finish"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_regist_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="top"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorAccent"
        android:elevation="2dp">


        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="完成注册"
            android:textColor="@android:color/white"
            android:textSize="18sp" />


    </RelativeLayout>
    <TextView
        android:id="@+id/tv_finish"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:text="@string/smssdk_finish"
        android:textSize="30sp"
        android:textColor="@color/colorAccent"
        android:gravity="center"
        android:layout_below="@+id/rl_regist_title"/>
    <Button
        android:id="@+id/btn_go_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/smssdk_gologin"
        android:textColor="@android:color/white"
        android:background="@drawable/btn_login"
        android:layout_margin="10dp"
        android:layout_below="@+id/tv_finish"/>
</RelativeLayout>
