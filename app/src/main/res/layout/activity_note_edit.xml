<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2">
    <RelativeLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#fff"
        android:elevation="3dp"
        android:gravity="center_vertical"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/iv_add_note_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="添加备注"
            android:textColor="#000"
            android:textSize="18dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/iv_add_note_back"
            />

        <ImageView
            android:id="@+id/btn_checkmark"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="0dp"
            android:src="@drawable/checkmark"
            android:layout_marginEnd="15dp"
            android:layout_alignTop="@+id/iv_add_note_back"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>


    <EditText
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:background="@drawable/bg_corners_white"
        android:gravity="start"
        android:hint="输入备注，最多100字哦"
        android:lines="5"
        android:maxLength="100"
        android:padding="5dp" />

</RelativeLayout>
